
import java.util.Scanner;

public class Matrix {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the size of the square matrix: ");
        int n = scanner.nextInt();
        
        int[][] matrix = new int[n][n];
        System.out.println("Enter the elements of the matrix:");
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                matrix[i][j] = scanner.nextInt();
            }
        }
        int diagonalCount = 0;
        System.out.print("Elements on the first diagonal: ");
        for (int i = 0; i < n; i++) {
            System.out.print(matrix[i][i] + " ");
            diagonalCount++;
        }
        System.out.println("\nNumber of elements on the first diagonal: " + diagonalCount);
        
        diagonalCount = 0;
        System.out.print("Elements on the second diagonal: ");
        for (int i = 0; i < n; i++) {
            System.out.print(matrix[i][n-i-1] + " ");
            diagonalCount++;
        }
        System.out.println("\nNumber of elements on the second diagonal: " + diagonalCount);
        int sum = 0;
        int count = 0;
        for (int i = 0; i < n; i++) {
            for (int j = i+1; j < n; j++) {
                sum += matrix[i][j];
                count++;
            }
        }
        double average = (double) sum / count;
        int smallerCount = 0;
        System.out.print("Elements in the upper triangle less than the average (" + average + "): ");
        for (int i = 0; i < n; i++) {
            for (int j = i+1; j < n; j++) {
                if (matrix[i][j] < average) {
                    System.out.print(matrix[i][j] + " ");
                    smallerCount++;
                }
            }
        }
        System.out.println("\nNumber of elements in the upper triangle less than the average: " + smallerCount);
        int symmetricCount = 0;
        System.out.print("Symmetric elements in the upper and lower triangles: ");
        for (int i = 0; i < n; i++) {
            for (int j = i+1; j < n; j++) {
                if (matrix[i][j] == matrix[j][i]) {
                    System.out.print(matrix[i][j] + " ");
                    symmetricCount++;
                }
            }
        }
        System.out.println("\nNumber of symmetric elements in the upper and lower triangles: " + symmetricCount);
    }
}
